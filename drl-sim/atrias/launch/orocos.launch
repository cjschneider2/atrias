<launch>
    <!-- Start data publishing node. -->
    <node name    = "atrias_gui"
          pkg     = "atrias_gui"
          type    = "atrias_gui"
          output  = "screen">
    </node>

    <!-- Launch the Orocos script for atrias_ecat_master -->
    <node name    = "atrias_ecat_master_rosnode"
          pkg     = "ocl"
          type    = "deployer-gnulinux"
          args    = "-s $(find atrias_ecat_master)/application.ops -linfo --"
          output  = "screen">
    </node>

    <!-- Start the data logger. -->
    <node name    = "data_logger"
          pkg     = "atrias"
          type    = "data_logger" />
</launch>

