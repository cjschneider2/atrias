<launch>
    <machine name       = "zotac-1" 
             address    = "zotac-1" 
             user       = "drl"
             env-loader = "/opt/ros/electric/setup.sh"
             default    = "true" />
    <!--<env name="ROS_MASTER_URI" value="http://drl-guilaptop:11311" />-->

    <!-- Launch the Orocos script for atrias_ecat_master -->
    <node name    = "atrias_ecat_master_rosnode"
          pkg     = "ocl"
          type    = "deployer-gnulinux"
          args    = "-s $(find atrias_ecat_master)/application.ops -linfo --"
          output  = "screen">
    </node>

    <!-- Start the data logger. -->
    <node name    = "data_logger"
          pkg     = "atrias"
          type    = "data_logger" />
</launch>

