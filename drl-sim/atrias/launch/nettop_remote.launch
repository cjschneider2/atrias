<launch>
    <!-- Run desktop.launch on local machine. -->
    <include file="$(find atrias)/launch/desktop.launch" />

    <!-- Set up remote machine information. -->
    <machine name       = "zotac-1"
             address    = "zotac-1"
             user       = "drl"
             env-loader = "/opt/ros/electric/setup.sh"
             default    = "true" />

    <!-- Start the magic shell on the remote machine. -->
    <node name    = "magic_shell"
          pkg     = "atrias"
          type    = "realtime_nettop.sh" />
</launch>

