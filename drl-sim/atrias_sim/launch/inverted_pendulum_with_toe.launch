<!-- Andrew Peekema -->

<launch>

  <node name="cleanup_gazebo" pkg="atrias_sim" type="clean_gazebo_tmp.sh" />

  <node name="gazebo" pkg="gazebo" type="gazebo" args="$(find atrias_sim)/worlds/simple.world" respawn="false" output="screen"/>

  <!-- send atrias.xml to param server -->
  <param name="robot_description" command="$(find xacro)/xacro.py '$(find atrias_sim)/robots/inverted_pendulum_with_toe_header.urdf.xacro'" />

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="atrias_simulation" pkg="gazebo" type="spawn_model" args="-z 0.959 -urdf -param robot_description -model invertedPendulum" respawn="false" output="screen" />

</launch>
